.searchfield-layout {	
	height 85vh
	width 100%
	margin-top 20px
	display flex
	justify-content center
	align-items center
}

.searchfield-bd {
	object-fit cover
	height 100%
	width 100%
}

.searchfield-bar-pos {
	position absolute
	display flex
	justify-content space-between
	align-items center
	flex-direction column
	height 60vh
	margin-top 10%
}

.searchfield-slogan {
	font-family Architects Daughter
	font-size 80px
	color white
}

.content-layout {
	display flex
	align-items center
	flex-direction column
}

.content-title {
	font-size 28px
	margin 120px 0 60px 0
}

.content-sutitle-layout {
	display flex
	justify-content space-between
	width 60%
}

.content-mustlike-sutitle-layout {
	display flex
	justify-content center
	width 60%
} 

.content-area-link {
	text-decoration none
	color black
}

.footer {
	background-color black
	height 300px
	margin-top 100px   
}

.footer-nav-bar {   
	display flex
	justify-content center
	padding-top 50px  
}

.footer-nav-text {
	color white;
	margin-right 20px  
}

.footer-info-icon-bar {
	display flex
	justify-content center
	padding-top 30px
}

.footer-icon {
	margin-right 30px
}

@media only screen and (max-width: 1700px) {
  .content-sutitle-layout {
		width 75%
	}
}