.user-bg {
	display flex
	justify-content center
	background-color #F1F1F1
	height 100vh
}

.user-account-block {
	display flex
	justify-content space-between
	width 100%
	margin-bottom 10px
}

.user-info {
	background-color white
	width 70%
	height 135px
	margin-top 60px
	padding 35px
}

.user-info-account {
	display flex
	justify-content space-between
	width 35%
}

.user-info-detail {
	display flex
	justify-content space-between
	width 60%
	height 50px
}

.user-info-txt {
	font-size 18px
	font-weight bold
}

.user-info-number {
	text-align right
	font-weight bold
	font-size 18px
}

.user-edit-file-btn {
	border 1px #C4C4C4 solid
	height 40px
	padding 5px 10px
	border-radius 5px
	font-size 15px
	cursor pointer
}

.user-edit-file-btn:hover {
	background-color #e9e9e9
}

.user-intro-block {
	width 100%
	margin-left -55px
	display flex
	flex-direction row
}

.user-intro {
	background-color white
	width 25%
	height 220px
	padding 20px
	margin-right 40px
}

.user-intro-title {
	font-size 18px
	margin-bottom 15px
}

.user-intro-content {
	display flex
	flex-direction row
	text-align center
	margin-bottom 10px
}

.user-intro-content-txt {
	color #333
	margin-left 5px
	font-size 14px
}

.user-self-intro {
	color #333
	margin-top 20px
}

.user-dynamic-news {
	background-color white
	width 70%
	height 100px
	padding 20px
}