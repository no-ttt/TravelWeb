/* Header */

.header-layer {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.header-logo-bar {
	display: flex;
	flex-direction: row;
	align-items: flex-end;
}

.header-logo {
	margin-left: 30px;
	margin-top: 10px;
}

.header-navbar-pos {
	margin-top: 30px;
	margin-right: 30px;
	display: flex;
	flex-direction: row;
}

/* SearchField */

.searchfield-layout {
	display: flex;
	align-items: center;
	justify-content: center;	
}

.searchfield-mask {
	position: relative;
  height: 750px;
	width: 100%;
}

.searchfield-img {
	object-fit: cover;
 	height: 100%;
	width: 100%;
	margin-top: 30px;
}

.searchfield-bar-pos { 
	position: absolute;
	margin-top: 20%;
}

/* Content */

.content-layout {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 100px;
}

.content-title {
	font-weight: bold;
	font-size: 40px;
	margin-bottom: 50px;
	margin-top: 20px;
}

.content-item {
	width: 98%;
	margin-bottom: 50px;
	display: flex;
	justify-content: center;
	border: 1px red solid;
}

.content-must-like {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	width: 100%;
}

.content-explore {
	position: relative;
	display: flex;
	justify-content: center;
	margin-right: 2px;
}

.content-explore-text-block {
	display: flex;
	flex-direction: column;
	align-items: center;
	position: absolute;
	z-index: 1;
	margin-top: 40%;
}

/* Footer */
.footer {
  background-color: black;
  height: 200px;
  margin-top: 100px;   
}

.footer-nav-bar {   
  display: flex;
  justify-content: center;
  padding-top: 50px;  
}

.footer-nav-text {
  color: white; 
  margin-right: 20px;   
}

.footer-info-icon-bar {
  display: flex;
  justify-content: center; 
  padding-top: 30px; 
}

.footer-icon {
  margin-right: 30px;  
}
