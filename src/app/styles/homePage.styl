.header-layer {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.header-logo-bar {
	display: flex;
	flex-direction: row;
	align-items: flex-end;
}

.header-logo {
	margin-left: 30px;
	margin-top: 5px;
}

.header-navbar-pos {
	margin-top: 30px;
	margin-right: 30px;
}

.searchfield-layout {
	display: flex;
	align-items: center;
	justify-content: center;	
}

.searchfield-mask {
	position: relative;
  height: 420px;
	width: 100%;
}

.searchfield-mask::before {
	content: " ";
  height: 420px;
	width: 100%;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.4);
	margin-top: 20px;
}

.searchfield-img {
	object-fit: cover;
 	height: 420px;
	width: 100%;
	margin-top: 20px;
}

.searchfield-bar-pos { 
	position: absolute;
	margin-top: 140px;
}

.content-recommend-block {
	background-color: #f5f5dc;
}

.content-layout {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 100px;
}

.content-title {
	font-weight: bold;
	font-size: 30px;
	margin-bottom: 50px;
	margin-top: 20px;
}

.content-item {
	width: 80%;
	margin-bottom: 50px;
}

.footer {
  background-color: black;
  height: 200px;
  margin-top: 100px;   
}

.footer-nav-bar {   
  display: flex;
  justify-content: center;
  padding-top: 50px;  
}

.footer-nav-text {
  color: white; 
  margin-right: 20px;   
}

.footer-info-icon-bar {
  display: flex;
  justify-content: center; 
  padding-top: 30px; 
}

.footer-icon {
  margin-right: 30px;  
}
