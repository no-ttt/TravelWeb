/* Header */
.header-layer {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.header-logo-bar {
	display: flex;
	flex-direction: row;
	align-items: flex-end;
}

.header-logo {
	margin-left: 30px;
	margin-top: 10px;
}

.header-navbar-pos {
	margin-top: 30px;
	margin-right: 30px;
	display: flex;
	flex-direction: row;
}

/* SearchField */
.searchfield-layout {
	display: flex;
	align-items: center;
	justify-content: center;	
}

.searchfield-mask {
	position: relative;
  height: 600px;
	width: 100%;
	margin-top: 20px;
}

.searchfield-img {
	object-fit: cover;
 	height: 100%;
	width: 100%;
}

.searchfield-bar-pos { 
	position: absolute;
	margin-top: 18%;
}


/* Content */
.content-bg {
	background-image: url(https://www.greentour.com.tw/images/bg-white.jpg);
}

.content-layout {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.content-title {
	font-weight: bold;
	font-size: 30px;
	margin-top: 80px;
	margin-bottom: 80px;
	font-weight: normal;
	font-family: "Noto Serif","Noto Serif TC",serif;
}

.content-item {
	width: 100%;
	margin-bottom: 50px;
	display: flex;
	justify-content: center;
}

.content-must-like {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	width: 100%;
}

.content-explore {  
	position: relative;
	display: flex;
	justify-content: center;
	margin-right: 2px;
}

.content-explore-text-block {
	display: flex;
	flex-direction: column;
	align-items : center;
	position: absolute;
	z-index: 1;
	margin-top: 38%;
}

.content-explore-text {
	font-family: "cwTeXFangSong", serif;
	color: white; 
}

.content-explore-link {
	color: white;
	font-size: 20px;
	text-decoration: none;
	font-family: "cwTeXFangSong", serif;
	font-weight: normal;
}

.content-hot-spot {
	display: flex;
	justify-content: space-around;
	width: 100%;
	margin-bottom: 100px;
}

.content-hot-spot-title {
	font-family: "Noto Serif","Noto Serif TC",serif;
	font-size: 20px;
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 15px;
}

@import url(https://fonts.googleapis.com/earlyaccess/cwtexfangsong.css);


/* Footer */
.footer {
  background-color: black;
  height: 200px;
  // margin-top: 100px;   
}

.footer-nav-bar {   
  display: flex;
  justify-content: center;
  padding-top: 50px;  
}

.footer-nav-text {
  color: white; 
  margin-right: 20px;   
}

.footer-info-icon-bar {
  display: flex;
  justify-content: center; 
  padding-top: 30px; 
}

.footer-icon {
  margin-right: 30px;  
}
