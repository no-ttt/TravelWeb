.activity-about-layout {
	display flex
	justify-content center
	flex-direction column
	align-items center
	width 100%
	margin-bottom 50px
}

.activity-about-title {
	font-size 35px
	margin 50px 0 50px 0
}

.activity-about-content {
	display flex
	justify-content center
	flex-direction column
	align-items center
	width 60%
}

.activity-about-content-block {
	margin-bottom 60px
	width 100%
	display flex
	align-items flex-start
	flex-direction column
}

.activity-about-subtitle-layout {
	display flex
	flex-direction row
	align-items center
	margin-bottom 20px
}

.activity-about-subtitle {
	font-size 25px
	margin-left 12px
}

.activity-tab-content {
	display grid
	grid-template-columns repeat(4, 1fr)
	margin-left 25px
}

.activity-slogan-bg {
	background-color #dfd3ee
	width 100%
	height 22vh
	margin-bottom 80px
	display flex
	justify-content space-between
	align-items center
}

.activity-slogan-title {
	display flex
	justify-content flex-start
	align-items center
	font-weight bold
	font-size 28px
}

.activity-slogan-des {
	margin-top 10px
	font-size 18px
	margin-bottom 20px
}

.activity-slogan-tag {
	display flex
	justify-content flex-start
	align-items center
	font-size 14px
	margin-bottom 3px
}

.activity-slogan-img {
	object-fit cover
	max-width 50%
	height 100%
}

.activity-explore-btn {
	font-size 14px
	text-decoration none
	background-color black
	color white
	padding 10px
	border-radius 30px
}

.activity-explore-btn:hover {
	background-color white
	color black
	border 1px black solid
}