.spot-detail-layout {
	display flex
	flex-direction column
	justify-content center
	align-items center
	margin-top 50px
}

.spot-detail-header {
	display flex
	justify-content space-between
	width 75%
	margin-bottom 20px
}

.spot-detail-title {
	font-size 35px
	font-weight bold
}

.spot-detail-icon {
	display flex
	justify-content space-between
	align-items center
	width 5%
}

.spot-detail-info-layout {
	display flex
	justify-content space-between
	align-items center
	width 75%
	margin-bottom 20px
}

.spot-detail-main-info {
	display flex
	flex-direction row
}

.spot-detail-other-info {
	display flex
	justify-content space-between
	align-items flex-start
	width 75%
}

.spot-detail-loc {
	display flex
	flex-direction row
	margin-right 20px
}

.spot-detail-tel {
	display flex
	flex-direction row
}

.spot-detail-img {
	width 750px
	height 500px
	object-fit cover
}

.spot-info-tb {
	width 700px
	height 500px
	margin-left 40px
	display flex
	justify-content space-between
	flex-direction column
}

.spot-info-tb-items {
	margin-top 20px
}

.spot-info-tr {
	display block
	margin-bottom 20px
}

.spot-info-td {
	font-size 16px
	min-width 100px
}

.spot-info-text {
	font-size 16px
	width 100%
	height 100%
	line-height 24px
}

.spot-info-content {
	display -webkit-box
	-webkit-box-orient vertical
	-webkit-line-clamp 3
	overflow hidden
}

.spot-info-btn {
	text-decoration underline
	color gray
	font-size 15px
	margin-top 8px
}

.spot-info-btn:hover {
	color orange	
}

.spot-pin-row {
	display flex
	flex-direction row
}

.spot-pin {
	font-size 14px
	text-align center
	background-color #FAECBB
	padding 4px 16px 4px 16px
	border-radius 30px
	margin-right 10px
}

.reviews-layout {
	display flex
	flex-direction column
	justify-content center
	align-items center
}

.reviews-content {
	display flex
	justify-content space-between
	width 75%
}

.reviews-write-layout {
	margin-top 50px	
}

.review-write-block {
	border 1px #c4c4c4 solid
	color #b5b5b5
	font-size 14px
	border-radius 5px
	padding 10px
	width 200px
	height 50px
	margin-top 15px
}

.nearby-layout {
	margin-top 50px
	display flex
	flex-direction column
	justify-content center
	align-items center
}

.nearby-title {
	font-size 28px
	font-weight bold
	margin-bottom 20px
}

.nearby-subtitle-block {
	width 40%
	margin-left 55px
	margin-top 75px
	height 65vh
	display flex
	justify-content space-between
	flex-direction column
}

.nearby-subtitle {
	font-size 20px
	margin-bottom 5px
}

.nearby-subtitle-items {
	font-size 15px
	margin-bottom 20px
	color #333
}

.nearby-items-more {
	color #333
	font-size 14px
	text-decoration underline
	cursor pointer
}

.nearby-items-more:hover {
	color black
}

#map {
	width 100%
	height 70vh
}

#map-full-screen {
	width 100%
	height 100vh
}

.nearby-map {
	position absolute
	margin 20px 20px
	padding 10px
	display flex
	flex-direction row
	align-items flex-start
}

.nearby-map-filter {
	padding 10px
	width 100px
	background-color white
	border-radius 5px
	box-shadow 0 4px 4px 0 rgba(0, 0, 0, 0.2)
}

.nearby-map-filter div {
	display flex
	flex-direction row
	align-items center
}

.nearby-map-full-screen-btn {
	position absolute
	width 36px
	height 36px
	align-items center
	background-color white
	border-radius 2px
	box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.2)
	margin 20px
	right 0
}

.nearby-map-full-screen-btn:hover {
	background-color #e9e9e9
}

.nearby-map-icon-switch {
	margin-left 15px
	padding 3px
	width 220px
	background-color white
	border-radius 30px
	box-shadow 0 4px 4px 0 rgba(0, 0, 0, 0.2)
	display flex
	flex-direction row
	align-items center
	font-size 14px
}

.releated-trip-layout {
	margin-top 50px
	display flex
	flex-direction column
	justify-content center
	align-items center
}

.releated-trip-title {
	font-size 28px
	font-weight bold
	margin-bottom 20px
}